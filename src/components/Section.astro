---
const { title } = Astro.props;
---

<section>
  {title && (
    <h2>
      {title}
    </h2>
  )}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto;
    padding-top: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #f2f2f2;
    position: relative;
  }

  :global(.dark) section {
    border-bottom-color: #3c4144;
  }

  section:nth-child(1) {
    padding-top: 0;
  }

  h2 {
    margin-bottom: .8rem;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
    padding-left: 1.5rem;
  }
</style>