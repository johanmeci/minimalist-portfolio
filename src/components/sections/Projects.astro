---
import Section from "../Section.astro";
import ProjectsIcon from "@/icons/ProjectsIcon.astro";

import { projects } from "@cv";
---

<Section title="Projects">
  <div class="icon-container">
    <ProjectsIcon/>
  </div>
  <ul>
    {
      projects.map(({ url, description, links, name , isActive}) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Ver el proyecto ${name}`} target="_blank">
                    {name}
                  </a>
                  {isActive && <span>&bullet;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {
                  links.map((link) => {
                    return (
                      <a href={link.url} target="_blank">{link.label}</a>
                    )
                  })
                }
              </footer>
            </article>  
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 222px));
    gap: 1rem;
  }

  article {
    border-radius: 6px;
    border: 1px solid #e3d3d3;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: transform 180ms cubic-bezier(0.25, 0.46, 0.45, 0.94), box-shadow 180ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  :global(.dark) article {
    border-color: rgba(227, 211, 211, 0.3);
  }

  article:hover {
    transform: translateY(-3px);
    box-shadow: 0px 4px 8px rgba(38, 38, 38, 0.2);
  }

  :global(.dark) article:hover {
    box-shadow: 0px 4px 8px rgba(227, 211, 211, 0.2);
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article h3 span {
    color: #22c55e;
  }

  article a {
    color: #111;
  }

  :global(.dark) article a {
    color: #e3d3d3;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  article footer a {
    border-radius: 6px;
    background-color: #e3d3d3;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    text-decoration: none;
  }

  :global(.dark) article footer a {
    color: #252829;
  }
</style>