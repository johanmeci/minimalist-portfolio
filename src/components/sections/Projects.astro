---
import Section from "../Section.astro";
import ProjectsIcon from "@/icons/ProjectsIcon.astro";
import ArrowIcon from "@/icons/ArrowIcon.astro";

import { projects } from "@cv";
---

<Section title="Projects">
  <div class="icon-container">
    <ProjectsIcon/>
  </div>
  <ul>
    {
      projects.map(({ url, description, links, name, image, technologies, status }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`View project ${name}`} target="_blank">
                    {name}
                    <ArrowIcon/>
                  </a>
                </h3>
                {image && <img src={image} alt={name} />}
                <p>{description}</p>
              </header>
              <footer>
                <div class="container-technologies">
                  {
                    technologies.map((technology) => {
                      return (
                        <span>
                          <img src={`/assets/icons/${technology}-icon.svg`} alt={technology} />
                          {technology !== 'gsap' && technology}
                        </span>
                      )
                    })
                  }
                </div>
                <div class="container-links">
                  {
                    links.map((link) => {
                      return (
                        <a href={link.url} target="_blank">{link.label}</a>
                      )
                    })
                  }                
                </div>          
                {status && <span class="status">{status}</span>}
              </footer>
            </article>  
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 320px));
    gap: 1.1rem;
    justify-content: center;
  }

  article {
    background-color: white;
    border-radius: 6px;
    border: 1px solid #e3d3d3;
    gap: 5px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: transform 180ms cubic-bezier(0.25, 0.46, 0.45, 0.94), box-shadow 180ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  :global(.dark) article {
    border-color: rgba(227, 211, 211, 0.3);
    background-color: var(--bg-primary);
  }

  article:hover {
    transform: translateY(-3px);
    box-shadow: 0px 3px 6px rgba(38, 38, 38, 0.2);
  }

  :global(.dark) article:hover {
    box-shadow: 0px 4px 8px rgba(227, 211, 211, 0.2);
  }

  article header {
    flex: 1;
    img {
      object-fit: cover;
      object-position: top;
      width: 100%;
      border-radius: 6px;
      margin-bottom: .5rem;
    }
  }

  article h3 {
    margin-bottom: .8rem;
    color: #FFF;
    a {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      svg {
        width: 1.1rem;
        height: 1.1rem;
      }
    }
  }

  article h3 span {
    color: #22c55e;
  }

  article a {
    color: #111;
  }

  :global(.dark) article a {
    color: #fff;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: .8rem;
  }

  article footer {
    display: flex;
    flex-wrap: wrap;
    gap: .6rem;
    font-size: 0.6rem;
    position: relative;
    .status {
      position: absolute;
      bottom: 0;
      left: 0;
      padding-left: .5rem;
      &::after {
        content: '';
        width: 5px;
        height: 5px;
        border-radius: 50%;
        background-color: var(--accent-color);
        position: absolute;
        top: 45%;
        left: 0;
        transform: translateY(-45%);
      }
    }
  }

  :global(.dark) article footer .status {
    &::after {
      background-color: var(--accent-color);
    }
  }

  article footer a {
    border-radius: 6px;
    background-color: #e3d3d3;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    text-decoration: none;
  }

  article footer .container-technologies,
  article footer .container-links {
    display: flex;
    flex-wrap: wrap;
    gap: .6rem;
    width: 100%;
  }

  article footer .container-technologies {
    align-items: center;
    gap: .5rem;
    span {
      display: flex;
      align-items: center;
      gap: .2rem;
      line-height: 1;
      text-transform: capitalize;
      font-size: .6rem;
      border: 1px solid rgba(227, 211, 211, 0.2);
      padding: .3rem .3rem;
      height: 1.5rem;
      border-radius: .2rem;
      background-color: #17191a;
      color: #FFF;
    }
    
  }

  article footer .container-links {
    margin-top: 1rem;
    justify-content: flex-end;
  }

  :global(.dark) article footer a {
    color: #252829;
  }
</style>