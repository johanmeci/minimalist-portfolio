---
import Section from "../Section.astro";
import ExperienceIcon from "@/icons/ExperienceIcon.astro";

import { work } from "@cv";
---

<Section title="Experience">
  <div class="icon-container">
    <ExperienceIcon />
  </div>
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Present"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <p>{position}</p>
                </div>
                <time>{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
    
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 700;
    color: #111;
  }

  :global(.dark) article h3 {
    color: #e3d3d3;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    font-size: 0.85em;
    color: #555;
  }
</style>