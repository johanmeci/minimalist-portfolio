---
import { basics } from '@cv';
import Section from '@/components/Section.astro';
import WorldMap from '@/icons/WorldMap.astro';
import Mail from '@/icons/Mail.astro';
import GitHub from '@/icons/GitHub.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import ThemeIcon from '../ThemeIcon.astro';

const { name, label, location, profiles, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
};

const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn');
const linkedUrl = linkedInfo?.url;

const printInfo = [email, linkedUrl].filter(Boolean).join(' â€¢ ');
---

<Section>
  
  <div class="container">
    
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span class="location">
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print">
        {printInfo}
      </footer>
      <footer class="social-links">
        {
          email && (
            <a 
              href={`mailto:${email}`}
              title={`Send an email to ${name} at ${email}`}
              target="_blank"
              rel="noopener noreferrer">
              <Mail />
            </a>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <a 
                href={url}
                title={`Visit ${name}'s ${network} profile`}
                target="_blank"
                rel="noopener noreferrer">
                <Icon />
              </a>
            );
          })
        }
        <ThemeIcon />
      </footer>
    </div>
    <figure class="profile-image">
      <img src="/assets/avatar_johanmeneses.jpg" alt={name} />
    </figure>
  </div>

</Section>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
    font-weight: 700;
  }

  h2 {
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 1.25rem;
    text-wrap: balance;
    margin: 0;
  }

  .profile-image {
    margin: 0;
    position: relative;
  }

  .profile-image::after {
    content: '';
    position: absolute;
    top: 10px;
    left: 10px;
    right: -10px;
    bottom: -5px;
    border-radius: 16px;
    background: var(--accent-color);
    opacity: 0.1;
    z-index: -1;
    transition: all 0.3s ease;
  }

  .profile-image:hover::after {
    top: 15px;
    opacity: 0.2;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    object-position: top;
    width: 190px;
    height: 240px;
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    border: 4px solid;
    transition: transform 0.2s ease;
  }

  .profile-image:hover img {
    transform: translateY(-3px);
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .social-links {
    display: flex;
    gap: 8px;
    margin-top: 12px;
  }

  .social-links a {
    color: var(--text-muted);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border-color);
    background-color: transparent;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .social-links a:hover {
    color: var(--text-primary);
    background-color: var(--bg-secondary);
    transform: translateY(-3px);
    box-shadow: var(--card-shadow);
    text-decoration: none;
  }

  @media screen and (max-width: 768px) {
    .container {
      flex-direction: column;
    }
    .container .info {
      order: 1;
      padding-right: 0;
      text-align: center;
    }
    .location {
      margin: auto;
    }
    .social-links {
      justify-content: center;
    }
    .container figure {
      order: 0;
    }
    h1 {
      font-size: 2rem;
    }
    h2 {
      font-size: 1.1rem;
    }
  }

  .print {
    display: none;
  }

  @media print {
    .info {
      padding-right: 0;
    }

    .social-links {
      display: none;
    }

    .print {
      display: block;
      color: #000;
      margin-top: 0.5rem;
    }
  }
</style>